{
  "name": "web",
  "version": "1.0.0",
  "main": "index.js",
  "license": "CC-BY-4.0",
  "engines": {
    "node": "8",
    "yarn": "1.x"
  },
  "dependencies": {
    "@material-ui/core": "^3.4.0",
    "@material-ui/lab": "^3.0.0-alpha.23",
    "@rebass/components": "^4.0.0-1",
    "@rebass/grid": "^6.0.0-4",
    "@zeit/next-bundle-analyzer": "^0.1.2",
    "accepts": "^1.3.5",
    "compression": "^1.7.3",
    "deepmerge": "^2.1.1",
    "emotion": "^9.2.8",
    "emotion-server": "^9.2.8",
    "emotion-theming": "^9.2.6",
    "esm": "^3.0.82",
    "fast-memoize": "^2.5.1",
    "flow-remove-types": "^1.2.3",
    "full-icu": "^1.2.1",
    "i18next": "^11.5.0",
    "jss": "^9.8.7",
    "next": "^7.0.1",
    "path-to-regexp": "^2.2.1",
    "polished": "^2.0.3",
    "react": "^16.5.0",
    "react-dom": "^16.5.0",
    "react-emotion": "^9.2.8",
    "react-jss": "^8.6.1",
    "react-relay": "^1.6.2",
    "relay-runtime": "^1.6.2",
    "styled-system": "^3.0.3",
    "tiny-invariant": "^1.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.1.5",
    "@babel/plugin-proposal-optional-chaining": "^7.0.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/runtime": "^7.1.5",
    "@svgr/cli": "^2.4.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-plugin-emotion": "^9.2.8",
    "babel-plugin-relay": "^1.6.2",
    "cpx": "^1.5.0",
    "eslint-plugin-jest": "^21.22.0",
    "get-graphql-schema": "^2.1.2",
    "glob": "^7.1.2",
    "graphql": "^0.13.2",
    "jest": "^23.6.0",
    "relay-compiler": "^1.6.2",
    "rollup": "^0.66.6",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-uglify": "^6.0.0"
  },
  "peerDependencies": {
    "babel-eslint": "*",
    "eslint": "*",
    "eslint-plugin-flowtype": "*",
    "eslint-plugin-import": "*",
    "eslint-plugin-jsx-a11y": "*",
    "eslint-plugin-react": "*",
    "flow-bin": "*",
    "prettier": "*"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "env": {
      "node": 1,
      "browser": 1,
      "es6": 1,
      "jest/globals": true
    },
    "parser": "babel-eslint",
    "plugins": [
      "import",
      "react",
      "flowtype",
      "jest"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:flowtype/recommended"
    ],
    "rules": {
      "react/display-name": 0,
      "react/prop-types": 0,
      "jsx-a11y/anchor-is-valid": 0,
      "flowtype/generic-spacing": 0,
      "flowtype/space-after-type-colon": 0,
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error",
            "info"
          ]
        }
      ],
      "import/order": "error",
      "import/no-default-export": "warn",
      "no-unused-vars": [
        "error",
        {
          "ignoreRestSiblings": true
        }
      ],
      "react/no-find-dom-node": 0
    }
  },
  "config": {
    "API_ENDPOINT": "https://realadvisor-recruitment-api.herokuapp.com/graphql",
    "descr": [
      "SCRIPTS description",
      "test - pregenerate files and run tests",
      "start - to run on server env",
      "build - local release build",
      "dev - development env",
      "dev:raw - execute dev env skipping file generation (takes too long sometimes)",
      "relay, relay:gcp-build  - relay compilers for gcp-build we copy scheme locally before",
      "relay:clean - in very rare situations relay cache can be broken (I see that 2 times in life), this will clean it"
    ]
  },
  "scripts": {
    "update-schema": "get-graphql-schema $npm_package_config_API_ENDPOINT > schema.graphql",
    "test": "yarn relay && eslint ./ && flow && jest",
    "start": "API_ENDPOINT=$npm_package_config_API_ENDPOINT NODE_ENV=production node --icu-data-dir=`yarn -s run node-full-icu-path` server/index.js",
    "build": "yarn relay && next build",
    "heroku-prebuild": "yarn install --production=false",
    "heroku-postbuild": "yarn build",
    "dev": "yarn relay && yarn dev:raw",
    "dev:raw": "API_ENDPOINT=$npm_package_config_API_ENDPOINT node --icu-data-dir=`yarn -s run node-full-icu-path` server/index.js",
    "relay": "yarn update-schema && relay-compiler --src . --schema ./schema.graphql",
    "relay:clean": "rimraf $TMPDIR/* && rimraf ./**/__generated__/*.graphql.js"
  }
}
